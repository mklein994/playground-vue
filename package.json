{
  "name": "playground-vue",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run typecheck && pnpm run build:tailwind && vite build",
    "build:tailwind": "tailwind --minify --input ./src/tailwind.css --output ./public/tailwind.min.css",
    "preview": "vite preview",
    "typecheck:config": "vue-tsc --noEmit --composite false -p tsconfig.vite-config.json",
    "typecheck:workers": "vue-tsc --noEmit --composite false -p tsconfig.workers.json",
    "typecheck:app": "vue-tsc --noEmit --composite false -p tsconfig.app.json",
    "typecheck:tests": "vue-tsc --noEmit --composite false -p tsconfig.vitest.json",
    "typecheck": "pnpm typecheck:config && pnpm typecheck:workers && pnpm typecheck:tests",
    "lint": "eslint --ext js,ts,vue .",
    "lint:ci": "eslint --ext js,ts,vue --max-warnings 0 . && prettier --check .",
    "format": "eslint --ext js,ts,vue --fix --fix-type layout . && prettier --write .",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "packageManager": "pnpm@6.32.4",
  "dependencies": {
    "@sentry/tracing": "^6.19.3",
    "@sentry/vue": "^6.19.3",
    "@sentry/wasm": "^6.19.3",
    "vue": "^3.2.31",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.4.0",
    "@heroicons/vue": "^1.0.6",
    "@highlightjs/vue-plugin": "^2.1.0",
    "@tailwindcss/forms": "^0.5.0",
    "@types/node": "^17.0.23",
    "@types/tailwindcss": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/compiler-sfc": "^3.2.31",
    "@vue/test-utils": "^2.0.0-rc.17",
    "autoprefixer": "^10.4.4",
    "c8": "^7.11.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "happy-dom": "^2.55.0",
    "highlight.js": "^11.5.0",
    "modern-normalize": "^1.1.0",
    "postcss": "^8.4.12",
    "postcss-dir-pseudo-class": "^6.0.4",
    "postcss-logical": "^5.0.4",
    "prettier": "^2.6.1",
    "sass": "^1.49.10",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.3",
    "vite": "^2.9.1",
    "vitest": "^0.8.1",
    "vue-tsc": "^0.33.9"
  }
}
