{
  "name": "playground-vue",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:all": "pnpm run typecheck && pnpm run build:tailwind && vite build",
    "build:tailwind": "tailwind --minify --input ./src/tailwind.css --output ./public/tailwind.min.css",
    "preview": "vite preview",
    "typecheck:config": "vue-tsc --noEmit --composite false -p tsconfig.vite-config.json",
    "typecheck:workers": "vue-tsc --noEmit --composite false -p tsconfig.workers.json",
    "typecheck:app": "vue-tsc --noEmit --composite false -p tsconfig.app.json",
    "typecheck:tests": "vue-tsc --noEmit --composite false -p tsconfig.vitest.json",
    "typecheck:node-tests": "vue-tsc --noEmit --composite false -p ./tests/tsconfig.node-tests.json",
    "typecheck": "pnpm typecheck:config && pnpm typecheck:workers && pnpm typecheck:tests && pnpm typecheck:node-tests",
    "lint": "eslint --ext js,cjs,mjs,ts,vue .",
    "lint:ci": "eslint --ext js,cjs,mjs,ts,vue --max-warnings 0 . && prettier --check .",
    "format": "eslint --ext js,cjs,mjs,ts,vue --fix --fix-type layout . && prettier --write .",
    "test": "vitest",
    "test:node": "node --test",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "packageManager": "pnpm@7.3.0",
  "dependencies": {
    "@sentry/tracing": "^7.2.0",
    "@sentry/vue": "^7.2.0",
    "@sentry/wasm": "^7.2.0",
    "vue": "^3.2.37",
    "vue-router": "^4.0.16"
  },
  "devDependencies": {
    "@heroicons/vue": "^1.0.6",
    "@highlightjs/vue-plugin": "^2.1.0",
    "@tailwindcss/forms": "^0.5.2",
    "@types/node": "^18.0.0",
    "@types/tailwindcss": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/test-utils": "2.0.0",
    "autoprefixer": "^10.4.7",
    "c8": "^7.11.3",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-vue": "^9.1.1",
    "happy-dom": "^5.3.1",
    "highlight.js": "^11.5.1",
    "modern-normalize": "^1.1.0",
    "postcss": "^8.4.14",
    "postcss-dir-pseudo-class": "^6.0.4",
    "postcss-logical": "^5.0.4",
    "prettier": "^2.7.1",
    "sass": "^1.52.3",
    "tailwindcss": "^3.1.4",
    "typescript": "^4.7.4",
    "vite": "^2.9.12",
    "vitest": "^0.13.1",
    "vue-tsc": "^0.35.2"
  }
}
