{
  "name": "playground-vue",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:all": "pnpm run build:tailwind && vite build",
    "build:tailwind": "tailwind --minify --input ./src/tailwind.css --output ./public/tailwind.min.css",
    "preview": "vite preview",
    "typecheck:config": "vue-tsc --noEmit --composite false -p tsconfig.vite-config.json",
    "typecheck:workers": "vue-tsc --noEmit --composite false -p tsconfig.workers.json",
    "typecheck:app": "vue-tsc --noEmit --composite false -p tsconfig.app.json",
    "typecheck:tests": "vue-tsc --noEmit --composite false -p tsconfig.vitest.json",
    "typecheck:node-tests": "vue-tsc --noEmit --composite false -p ./tests/tsconfig.node-tests.json",
    "typecheck": "pnpm typecheck:config && pnpm typecheck:workers && pnpm typecheck:tests && pnpm typecheck:node-tests",
    "lint": "eslint --ext js,cjs,mjs,ts,vue .",
    "lint:ci": "eslint --ext js,cjs,mjs,ts,vue --max-warnings 0 . && prettier --check .",
    "format": "eslint --ext js,cjs,mjs,ts,vue --fix --fix-type layout . && prettier --write .",
    "test": "vitest",
    "test:node": "node --test --test-reporter=spec",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "packageManager": "pnpm@8.3.1",
  "dependencies": {
    "@sentry/rrweb": "^0.3.3",
    "@sentry/tracing": "^7.48.0",
    "@sentry/vue": "^7.48.0",
    "@sentry/wasm": "^7.48.0",
    "rrweb": "2.0.0-alpha.4",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@heroicons/vue": "^2.0.17",
    "@highlightjs/vue-plugin": "^2.1.2",
    "@tailwindcss/forms": "^0.5.3",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vitest/coverage-c8": "^0.30.1",
    "@vue/test-utils": "^2.3.2",
    "autoprefixer": "^10.4.14",
    "c8": "^7.13.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-vue": "^9.11.0",
    "happy-dom": "^9.8.3",
    "highlight.js": "^11.7.0",
    "modern-normalize": "^1.1.0",
    "postcss": "^8.4.22",
    "postcss-dir-pseudo-class": "^7.0.2",
    "postcss-logical": "^6.1.0",
    "prettier": "^2.8.7",
    "sass": "^1.62.0",
    "tailwindcss": "^3.3.1",
    "typescript": "~5.0.4",
    "vite": "^4.2.2",
    "vitest": "^0.30.1",
    "vue-tsc": "~1.2.0"
  }
}
