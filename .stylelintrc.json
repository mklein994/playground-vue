{
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-tailwindcss",
    "stylelint-config-idiomatic-order",
    "stylelint-config-recommended-vue"
  ],
  "overrides": [
    {
      "files": ["*.vue", "*.css"],
      "rules": {
        "function-no-unknown": [
          true,
          {
            "ignoreFunctions": ["v-bind", "theme"]
          }
        ]
      }
    }
  ]
}
