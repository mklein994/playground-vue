{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vitest/importMeta"],
    "paths": {
      "@sunrise-cli/*": ["../sunrise-cli/*", "./src/fake/sunrise-cli/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/assets/*",
    "src/assets/*.json",
    "tests/**/*"
  ],
  "exclude": ["tests/**/*", "**/coverage/**", "./src/workers/**"]
}
