{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vitest/importMeta"],
    "paths": {
      "@sunrise-cli/*": ["../sunrise-cli/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*"
  ],
  "exclude": ["tests/**/*"]
}
